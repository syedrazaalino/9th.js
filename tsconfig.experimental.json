{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/experimental/esm",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/experimental/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.js",
    "**/__tests__/**/*"
  ]
}
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/module/esm",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/experimental/**/*",
    "src/advanced/**/*",
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.js",
    "**/__tests__/**/*"
  ]
}